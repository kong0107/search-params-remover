{
    "manifest_version": 2,
    "name": "Search Params Remover",
    "version": "0.1.0",
    "description": "a browser extension helps you surf without utm_source and fbclid",
    "author": "kong0107",
    "icons" : {
        "128": "icon.png"
    },
    "browser_action": {
        "default_icon": "icon.png"
    },
    "permissions": [
        "storage",
        "webRequest",
        "webRequestBlocking",
        "*://*/*"
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "background": {
        "scripts": [
            "browser.js",
            "background.js"
        ],
        "persistent": true
    }
}
